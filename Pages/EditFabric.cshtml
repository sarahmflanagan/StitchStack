@page "{id}"
@model StitchStack.Pages.EditFabricModel
@{
    ViewData["Title"] = "Edit Fabric";
}

<div class="container form-container">
    <h1>Edit Fabric</h1>

    <form method="post" class="form">
        <input type="hidden" asp-for="Fabric.Id" />

        <div class="form-group">
            <label asp-for="Fabric.Type" class="form-label">Type *</label>
            <input asp-for="Fabric.Type" class="form-control" required />
            <span asp-validation-for="Fabric.Type" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Fabric.Colour" class="form-label">Colour</label>
            <input asp-for="Fabric.Colour" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Fabric.Source" class="form-label">Source</label>
            <input asp-for="Fabric.Source" class="form-control" />
        </div>

        <div class="form-group form-check">
            <input asp-for="Fabric.isWoven" type="checkbox" class="form-check-input" />
            <label asp-for="Fabric.isWoven" class="form-check-label">Is Woven</label>
        </div>

        <div class="form-group">
            <label asp-for="Fabric.Description" class="form-label">Description</label>
            <textarea asp-for="Fabric.Description" class="form-control" rows="4"></textarea>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-success">Save Changes</button>
            <a class="btn btn-secondary" asp-page="Fabrics">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
