@page "/fabrics/edit/{id:int}"
@model StitchStack.Pages.EditFabricModel
@{
    ViewData["Title"] = "Edit Fabric";
}

<div class="container form-container">
    <h1>Edit Fabric</h1>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <strong>Validation Errors:</strong>
            <ul>
                @foreach (var modelState in ViewData.ModelState.Values)
                {
                    @foreach (var error in modelState.Errors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }

    <form method="post" class="form">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Fabric.Id" />

        <div class="form-group">
            <label asp-for="Fabric.Type" class="form-label">Type *</label>
            <input asp-for="Fabric.Type" class="form-control" required value="@(Model.Fabric?.Type ?? string.Empty)" />
            <span asp-validation-for="Fabric.Type" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Fabric.Colour" class="form-label">Colour</label>
            <input asp-for="Fabric.Colour" class="form-control" value="@(Model.Fabric?.Colour ?? string.Empty)" />
        </div>

        <div class="form-group">
            <label asp-for="Fabric.Source" class="form-label">Source</label>
            <input asp-for="Fabric.Source" class="form-control" value="@(Model.Fabric?.Source ?? string.Empty)" />
        </div>

        <div class="form-group form-check">
            <input asp-for="Fabric.isWoven" type="checkbox" class="form-check-input" @(Model.Fabric?.isWoven == true ? "checked" : "") />
            <label asp-for="Fabric.isWoven" class="form-check-label">Is Woven</label>
        </div>

        <div class="form-group">
            <label asp-for="Fabric.Description" class="form-label">Description</label>
            <textarea asp-for="Fabric.Description" class="form-control" rows="4">@(Model.Fabric?.Description ?? string.Empty)</textarea>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-success">Save Changes</button>
            <a class="btn btn-secondary" href="/fabrics">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
