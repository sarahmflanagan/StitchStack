@page "/projects"
@model StitchStack.Pages.ProjectsModel
@{
    ViewData["Title"] = "Projects";
}

<div class="container">
    <div class="page-header">
        <h1>Projects</h1>
        <a class="btn btn-primary" href="/projects/add">+ Add New Project</a>
    </div>

    @if (Model.Projects.Count == 0)
    {
        <div class="alert alert-info">
            No projects found. <a href="/projects/add">Create one now</a>.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Fabric</th>
                        <th>Pattern</th>
                        <th>Toil Required</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model.Projects)
                    {
                        <tr>
                            <td>@project.Name</td>
                            <td>@(project.Fabric?.Type ?? "-")</td>
                            <td>@(project.Pattern?.Name ?? "-")</td>
                            <td>@(project.ToilRequired ? "Yes" : "No")</td>
                            <td>@(project.Description ?? "-")</td>
                            <td>
                                <a class="btn btn-sm btn-info" href="/projects/edit/@project.Id">Edit</a>
                                <a class="btn btn-sm btn-danger" href="/projects?handler=delete&id=@project.Id" onclick="return confirm('Are you sure?')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
