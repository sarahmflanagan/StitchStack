@page
@model StitchStack.Pages.PatternsModel
@{
    ViewData["Title"] = "Patterns";
}

<div class="container">
    <div class="page-header">
        <h1>Patterns</h1>
        <a class="btn btn-primary" asp-page="AddPattern">+ Add New Pattern</a>
    </div>

    @if (Model.Patterns.Count == 0)
    {
        <div class="alert alert-info">
            No patterns found. <a asp-page="AddPattern">Add one now</a>.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Brand</th>
                        <th>Woven</th>
                        <th>Toil Complete</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pattern in Model.Patterns)
                    {
                        <tr>
                            <td>@pattern.Name</td>
                            <td>@(pattern.Type ?? "-")</td>
                            <td>@(pattern.Brand ?? "-")</td>
                            <td>@((pattern.isWoven ?? false) ? "Yes" : "No")</td>
                            <td>@((pattern.isToilComplete ?? false) ? "Yes" : "No")</td>
                            <td>@(pattern.Description ?? "-")</td>
                            <td>
                                <a class="btn btn-sm btn-info" asp-page="EditPattern" asp-route-id="@pattern.Id">Edit</a>
                                <a class="btn btn-sm btn-danger" asp-page="Patterns" asp-route-handler="delete" asp-route-id="@pattern.Id" onclick="return confirm('Are you sure?')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
