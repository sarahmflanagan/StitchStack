@page
@model StitchStack.Pages.FabricsModel
@{
    ViewData["Title"] = "Fabrics";
}

<div class="container">
    <div class="page-header">
        <h1>Fabrics</h1>
        <a class="btn btn-primary" asp-page="AddFabric">+ Add New Fabric</a>
    </div>

    @if (Model.Fabrics.Count == 0)
    {
        <div class="alert alert-info">
            No fabrics found. <a asp-page="AddFabric">Add one now</a>.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Colour</th>
                        <th>Woven</th>
                        <th>Source</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fabric in Model.Fabrics)
                    {
                        <tr>
                            <td>@fabric.Type</td>
                            <td>@(fabric.Colour ?? "-")</td>
                            <td>@((fabric.isWoven ?? false) ? "Yes" : "No")</td>
                            <td>@(fabric.Source ?? "-")</td>
                            <td>@(fabric.Description ?? "-")</td>
                            <td>
                                <a class="btn btn-sm btn-info" asp-page="EditFabric" asp-route-id="@fabric.Id">Edit</a>
                                <a class="btn btn-sm btn-danger" asp-page="Fabrics" asp-route-handler="delete" asp-route-id="@fabric.Id" onclick="return confirm('Are you sure?')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
