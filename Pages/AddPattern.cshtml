@page "/patterns/add"
@model StitchStack.Pages.AddPatternModel
@{
    ViewData["Title"] = "Add Pattern";
}

<div class="container form-container">
    <h1>Add New Pattern</h1>

    <form method="post" class="form">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="Pattern.Name" class="form-label">Name *</label>
            <input asp-for="Pattern.Name" class="form-control" placeholder="e.g., Simple Dress, Coat Pattern" required />
            <span asp-validation-for="Pattern.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Pattern.Type" class="form-label">Type</label>
            <input asp-for="Pattern.Type" class="form-control" placeholder="e.g., Dress, Shirt, Coat" />
        </div>

        <div class="form-group">
            <label asp-for="Pattern.Brand" class="form-label">Brand</label>
            <input asp-for="Pattern.Brand" class="form-control" placeholder="e.g., Vogue, Burda, Indie Designer" />
        </div>

        <div class="form-group form-check">
            <input asp-for="Pattern.isWoven" type="checkbox" class="form-check-input" />
            <label asp-for="Pattern.isWoven" class="form-check-label">Is Woven</label>
        </div>

        <div class="form-group form-check">
            <input asp-for="Pattern.isToilComplete" type="checkbox" class="form-check-input" />
            <label asp-for="Pattern.isToilComplete" class="form-check-label">Is Toil Complete</label>
        </div>

        <div class="form-group">
            <label asp-for="Pattern.Description" class="form-label">Description</label>
            <textarea asp-for="Pattern.Description" class="form-control" rows="4" placeholder="Additional notes about this pattern..."></textarea>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-success">Add Pattern</button>
            <a class="btn btn-secondary" href="/patterns">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
