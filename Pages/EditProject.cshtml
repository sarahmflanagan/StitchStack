@page "{id}"
@model StitchStack.Pages.EditProjectModel
@{
    ViewData["Title"] = "Edit Project";
}

<div class="container form-container">
    <h1>Edit Project</h1>

    <form method="post" class="form">
        <input type="hidden" asp-for="Project.Id" />

        <div class="form-group">
            <label asp-for="Project.Name" class="form-label">Name *</label>
            <input asp-for="Project.Name" class="form-control" required />
            <span asp-validation-for="Project.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Project.FabricId" class="form-label">Fabric</label>
            <select asp-for="Project.FabricId" asp-items="Model.FabricList" class="form-control">
                <option value="">-- Select a Fabric --</option>
            </select>
            <span asp-validation-for="Project.FabricId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Project.PatternId" class="form-label">Pattern</label>
            <select asp-for="Project.PatternId" asp-items="Model.PatternList" class="form-control">
                <option value="">-- Select a Pattern --</option>
            </select>
            <span asp-validation-for="Project.PatternId" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <input asp-for="Project.ToilRequired" type="checkbox" class="form-check-input" />
            <label asp-for="Project.ToilRequired" class="form-check-label">Toil Required</label>
        </div>

        <div class="form-group">
            <label asp-for="Project.Description" class="form-label">Description</label>
            <textarea asp-for="Project.Description" class="form-control" rows="4"></textarea>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-success">Save Changes</button>
            <a class="btn btn-secondary" asp-page="Projects">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
