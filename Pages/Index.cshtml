@page
@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div style="text-align: center; padding: 3rem 0;">
        <h1 style="color: var(--primary-color); margin-bottom: 1rem;">Welcome to StitchStack</h1>
        <p style="font-size: 1.1rem; color: #636e72; margin-bottom: 2rem;">Manage your sewing projects, fabrics, and patterns all in one place.</p>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem; margin-top: 3rem;">
            <div style="padding: 2rem; background-color: var(--light-bg); border-radius: 8px;">
                <h3 style="color: var(--primary-color); margin-bottom: 1rem;">Projects</h3>
                <p>Track all your sewing projects and manage their details.</p>
                <a class="btn btn-primary" asp-page="/Projects">View Projects</a>
            </div>

            <div style="padding: 2rem; background-color: var(--light-bg); border-radius: 8px;">
                <h3 style="color: var(--primary-color); margin-bottom: 1rem;">Fabrics</h3>
                <p>Keep track of your fabric collection and colours.</p>
                <a class="btn btn-primary" asp-page="/Fabrics">View Fabrics</a>
            </div>

            <div style="padding: 2rem; background-color: var(--light-bg); border-radius: 8px;">
                <h3 style="color: var(--primary-color); margin-bottom: 1rem;">Patterns</h3>
                <p>Manage your sewing patterns and pattern information.</p>
                <a class="btn btn-primary" asp-page="/Patterns">View Patterns</a>
            </div>
        </div>
    </div>
</div>
