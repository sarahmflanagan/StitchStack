@page "/patterns/edit/{id:int}"
@model StitchStack.Pages.EditPatternModel
@{
    ViewData["Title"] = "Edit Pattern";
}

<div class="container form-container">
    <h1>Edit Pattern</h1>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <strong>Validation Errors:</strong>
            <ul>
                @foreach (var modelState in ViewData.ModelState.Values)
                {
                    @foreach (var error in modelState.Errors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }

    <form method="post" class="form">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Pattern.Id" />

        <div class="form-group">
            <label asp-for="Pattern.Name" class="form-label">Name *</label>
            <input asp-for="Pattern.Name" class="form-control" required value="@(Model.Pattern?.Name ?? string.Empty)" />
            <span asp-validation-for="Pattern.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Pattern.Type" class="form-label">Type</label>
            <input asp-for="Pattern.Type" class="form-control" value="@(Model.Pattern?.Type ?? string.Empty)" />
        </div>

        <div class="form-group">
            <label asp-for="Pattern.Brand" class="form-label">Brand</label>
            <input asp-for="Pattern.Brand" class="form-control" value="@(Model.Pattern?.Brand ?? string.Empty)" />
        </div>

        <div class="form-group form-check">
            <input asp-for="Pattern.isWoven" type="checkbox" class="form-check-input" @(Model.Pattern?.isWoven == true ? "checked" : "") />
            <label asp-for="Pattern.isWoven" class="form-check-label">Is Woven</label>
        </div>

        <div class="form-group form-check">
            <input asp-for="Pattern.isToilComplete" type="checkbox" class="form-check-input" @(Model.Pattern?.isToilComplete == true ? "checked" : "") />
            <label asp-for="Pattern.isToilComplete" class="form-check-label">Is Toil Complete</label>
        </div>

        <div class="form-group">
            <label asp-for="Pattern.Description" class="form-label">Description</label>
            <textarea asp-for="Pattern.Description" class="form-control" rows="4">@(Model.Pattern?.Description ?? string.Empty)</textarea>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-success">Save Changes</button>
            <a class="btn btn-secondary" href="/patterns">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
